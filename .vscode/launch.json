  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debug Watch",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "watch-debug"],
      "preLaunchTask": "npm: build-local",
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ]
}
